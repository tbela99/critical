{
  "name": "@tbela99/critical",
  "description": "Extract critical CSS from HTML pages to enable instantaneous rendering",
  "version": "0.1.3",
  "type": "module",
  "main": "dist/critical.js",
  "browser": "dist/browser.js",
  "exports": {
    ".": "./dist/index.js",
    "./browser": "./dist/browser.js",
    "./web": "./dist/web/index.js",
    "./cjs": "./dist/index.cjs"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbela99/critical.git"
  },
  "keywords": [
    "css",
    "path",
    "critical",
    "critical-css-path",
    "critical-path",
    "critical-css"
  ],
  "author": "Thierry Bela",
  "license": "MIT OR LGPL-3.0",
  "bugs": {
    "url": "https://github.com/tbela99/critical/issues"
  },
  "homepage": "https://github.com/tbela99/critical#readme",
  "bin": {
    "critical-cli": "bin/critical-cli.js"
  },
  "dependencies": {
    "@tbela99/css-parser": "^0.4.1",
    "chalk": "^5.3.0",
    "playwright": "^1.42.1",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "test": "node test/run.js",
    "build-ts": "tsc --outDir dist/lib --declarationDir dist/types --declaration true",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/node": "^20.12.2",
    "@types/web": "^0.0.142",
    "@types/yargs": "^17.0.32",
    "rollup": "^4.13.2",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3"
  }
}
